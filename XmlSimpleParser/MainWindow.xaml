<Window x:Class="XmlSimpleParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlSimpleParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Name="ButtonExport" Content="Export" Margin="5" Click="ButtonExport_Click"/>
            <Button Name="ButtonImport" Content="Import" Margin="5" Click="ButtonImport_Click"/>
        </StackPanel>

        <ListView Name="Cars" Grid.Row="1" Margin="5" />
    </Grid>
</Window>
